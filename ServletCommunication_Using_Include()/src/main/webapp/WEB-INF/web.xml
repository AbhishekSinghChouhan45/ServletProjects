<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>ServletCommunication_Using_Include()</display-name>
  <welcome-file-list>
    <welcome-file>input.html</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>sbi</servlet-name>
  	<servlet-class>com.nt.sbi.Sbi</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>sbi</servlet-name>
	<url-pattern>/sbi</url-pattern>  	
  </servlet-mapping>
  <servlet>
  	<servlet-name>header</servlet-name>
  	<servlet-class>com.nt.sbi.HeaderSbi</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>header</servlet-name>
	<url-pattern>/header</url-pattern>  	
  </servlet-mapping>
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:mysql://localhost:3306/sbi</param-value>
  </context-param>
  <context-param>
    <param-name>username</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>pass</param-name>
    <param-value>root</param-value>
  </context-param>
</web-app>